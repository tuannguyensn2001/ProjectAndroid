<resources>

	<style name="SubmitButton" parent="Widget.AppCompat.Button">
		<item name="android:background">@drawable/button_corner</item>
		<item name="android:layout_height">50dp</item>
		<item name="android:minWidth">150dp</item>
		<item name="android:textAlignment">center</item>
		<item name="android:textSize">22sp</item>
		<item name="android:textColor">@color/light_background</item>
		<item name="fontFamily">@font/segoeuib</item>
	</style>

	<style name="Title" parent="Widget.AppCompat.TextView">
		<item name="android:layout_width">320dp</item>
		<item name="android:layout_height">45dp</item>
		<item name="android:gravity">center</item>
		<item name="android:textAlignment">center</item>
		<item name="android:textSize">27sp</item>
		<item name="fontFamily">@font/seguibl</item>
		<item name="android:textColor">@color/light_title</item>
	</style>

	<style name="ErrorText" parent="Widget.AppCompat.TextView">
		<item name="android:layout_width">320dp</item>
		<item name="android:layout_height">45dp</item>
		<item name="android:gravity">center|start</item>
		<item name="android:textSize">18sp</item>
		<item name="fontFamily">@font/segoeui</item>
		<item name="android:textColor">@color/light_error</item>
	</style>

	<style name="ClickableText">
		<item name="android:clickable">true</item>
		<item name="android:gravity">center</item>
		<item name="android:textAlignment">center</item>
		<item name="android:textColor">@color/light_mainColor</item>
		<item name="fontFamily">@font/segoeuib</item>
		<item name="android:textSize">18sp</item>
	</style>

	<style name="Field">
		<item name="android:layout_marginTop">8dp</item>
		<item name="android:minHeight">50dp</item>
		<item name="android:layout_width">320dp</item>
		<item name="android:layout_height">53dp</item>
		<item name="android:background">@drawable/field_corner</item>
		<item name="android:ems">10</item>
		<item name="android:paddingStart">12dp</item>
		<item name="android:paddingEnd">12dp</item>
		<item name="android:paddingTop">12dp</item>
		<item name="android:paddingBottom">12dp</item>
		<item name="android:textColor">@color/light_hint</item>
		<item name="android:textSize">18sp</item>
	</style>

	<style name="MyProgressBarCircular" parent="@style/Widget.AppCompat.ProgressBar">
		<item name="android:indeterminateTint">@color/light_mainColor</item>
	</style>

	<style name="statistics_card_content_text">
		<item name="android:textSize">18sp</item>
		<item name="android:textColor">@color/light_mainColor</item>
		<item name="android:textStyle">bold</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginVertical">8dp</item>
	</style>

	<style name="standard_card_view">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginHorizontal">32dp</item>
		<item name="android:layout_marginBottom">16dp</item>
		<item name="contentPadding">16dp</item>
		<item name="cardCornerRadius">8dp</item>
		<item name="cardElevation">0dp</item>
	</style>

	<style name="card_title">
		<item name="android:textColor">@color/light_mainColor</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:paddingBottom">8dp</item>
		<item name="android:textSize">22sp</item>
		<item name="fontFamily">@font/seguisb</item>
	</style>

	<style name="card_content">
		<item name="android:textColor">@color/light_title</item>
		<item name="fontFamily">@font/segoeui</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:paddingVertical">4dp</item>
		<item name="android:textSize">18sp</item>
	</style>

	<style name="card_dad_title">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginHorizontal">32dp</item>
		<item name="android:layout_marginTop">12dp</item>
		<item name="android:layout_marginBottom">4dp</item>
		<item name="android:fontFamily">@font/segoeuib</item>
		<item name="android:paddingBottom">0dp</item>
		<item name="android:textColor">@color/light_title</item>
		<item name="android:textSize">24sp</item>
	</style>

	<style name="visual_tab_background">
		<item name="android:background">@drawable/visual_tab_background</item>
		<item name="android:backgroundTint">@color/light_mainColor</item>
		<item name="android:backgroundTintMode">src_atop</item>
		<item name="android:clickable">true</item>
		<item name="android:gravity">center</item>
		<item name="android:textColor">@color/light_background</item>
		<item name="android:textSize">20sp</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="exBarText">
		<item name="android:textSize">0sp</item>
		<item name="android:textColor">#00FFFFFF</item>
	</style>

</resources>