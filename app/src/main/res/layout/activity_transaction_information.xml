<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".View.Transaction.TransactionInformationActivity">

	<fragment
		android:id="@+id/action_bar"
		android:name="com.example.deluxe.View.Components.ActionBarFragment"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.5"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:layout="@layout/fragment_action_bar" />

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="0dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/action_bar">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<include
				android:id="@+id/include0"
				layout="@layout/layout_transaction_information"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/standard_align" />

			<include
				android:id="@+id/include1"
				layout="@layout/layout_transaction_information"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />

			<include
				android:id="@+id/include2"
				layout="@layout/layout_transaction_information"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />

			<include
				android:id="@+id/include3"
				layout="@layout/layout_transaction_information"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />

			<include
				android:id="@+id/include4"
				layout="@layout/layout_transaction_information"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />

			<include
				android:id="@+id/include5"
				layout="@layout/layout_transaction_information"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />

			<include
				android:id="@+id/include6"
				layout="@layout/layout_transaction_information"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
		</LinearLayout>
	</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>