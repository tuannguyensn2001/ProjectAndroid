<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:visibility="visible"
	tools:context=".View.TransferActivity">

	<!--
		TODO chuyen tien thanh cong-->

	<View
		android:id="@+id/appBar"
		android:layout_width="match_parent"
		android:layout_height="60dp"
		android:background="@color/light_mainColor"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

	</View>

	<Button
		style="@style/SubmitButton"
		android:id="@+id/submitButton"
		android:layout_width="200dp"
		android:layout_marginTop="38dp"
		android:text="@string/transfer_submitButton"
		android:textColor="@color/light_background"
		app:layout_constraintEnd_toEndOf="@+id/messageTransferInput"
		app:layout_constraintStart_toStartOf="@+id/messageTransferInput"
		app:layout_constraintTop_toBottomOf="@+id/messageTransferInput" />

	<TextView
		android:id="@+id/title"
		android:layout_width="320dp"
		android:layout_height="60dp"
		android:fontFamily="@font/segoeui"
		android:gravity="center|start"
		android:text="@string/transfer_title"
		android:textColor="@color/light_background"
		android:textSize="26sp"
		android:textStyle="normal"
		app:layout_constraintBottom_toBottomOf="@+id/appBar"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.7"
		app:layout_constraintStart_toStartOf="@+id/appBar"
		app:layout_constraintTop_toTopOf="@+id/appBar" />

	<EditText
		android:layout_height="wrap_content"
		style="@style/Field"
		android:id="@+id/messageTransferInput"
		android:background="@drawable/field_corner"
		android:hint="@string/transfer_messageTransferInput"
		android:inputType="textMultiLine"
		android:maxLength="180"
		android:maxLines="5"
		android:scrollbarStyle="insideInset"
		android:scrollbars="vertical"
		app:layout_constraintEnd_toEndOf="@+id/moneyTransferInput"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintStart_toStartOf="@+id/moneyTransferInput"
		app:layout_constraintTop_toBottomOf="@+id/moneyTransferInput" />

	<View
		android:id="@+id/uselessView"
		android:layout_width="match_parent"
		android:layout_height="100dp"
		android:background="@color/light_form"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/appBar" />

	<ImageView
		android:id="@+id/backButton"
		android:layout_width="30dp"
		android:layout_height="30dp"
		android:background="@drawable/abc_vector_test"
		android:clickable="true"
		app:layout_constraintBottom_toBottomOf="@+id/appBar"
		app:layout_constraintEnd_toEndOf="@+id/appBar"
		app:layout_constraintHorizontal_bias="0.03"
		app:layout_constraintStart_toStartOf="@+id/appBar"
		app:layout_constraintTop_toTopOf="@+id/appBar" />

	<ImageView
		android:id="@+id/profilePicture"
		android:layout_width="80dp"
		android:layout_height="80dp"
		android:background="@drawable/button_corner"
		app:layout_constraintBottom_toBottomOf="@+id/uselessView"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/uselessView" />

	<TextView
		style="@style/Title"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:maxWidth="320dp"
		android:id="@+id/accountUsername"
		android:layout_marginTop="16dp"
		android:text="@string/transfer_accountUsername"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/profilePicture" />

	<TextView
		android:id="@+id/accountEmail"
		android:layout_width="350dp"
		android:layout_height="30dp"
		android:fontFamily="@font/segoeuil"
		android:gravity="center"
		android:text="@string/transfer_accountEmail"
		android:textColor="@color/light_hint"
		android:textSize="18sp"
		android:textStyle="normal"
		app:layout_constraintEnd_toEndOf="@+id/accountUsername"
		app:layout_constraintStart_toStartOf="@+id/accountUsername"
		app:layout_constraintTop_toBottomOf="@+id/accountUsername" />

	<EditText
		android:id="@+id/moneyTransferInput"
		style="@style/Field"
		android:autofillHints=""
		android:hint="@string/transfer_moneyTransferInput"
		android:inputType="number"
		android:maxLength="9"
		app:layout_constraintEnd_toEndOf="@+id/notiText"
		app:layout_constraintStart_toStartOf="@+id/notiText"
		app:layout_constraintTop_toBottomOf="@+id/notiText" />

	<TextView
		style="@style/ErrorText"
		android:id="@+id/notiText"
		android:visibility="invisible"
		app:layout_constraintEnd_toEndOf="@+id/accountEmail"
		app:layout_constraintStart_toStartOf="@+id/accountEmail"
		app:layout_constraintTop_toBottomOf="@+id/accountEmail" />


</androidx.constraintlayout.widget.ConstraintLayout>