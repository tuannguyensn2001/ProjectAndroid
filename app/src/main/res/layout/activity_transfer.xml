<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:visibility="visible"
	tools:context=".View.TransferActivity">

	<!--
		TODO chuyen tien thanh cong-->

	<View
		android:id="@+id/appBar"
		android:layout_width="match_parent"
		android:layout_height="60dp"
		android:background="@color/light_mainColor"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

	</View>

	<Button
		android:id="@+id/submitButton"
		android:layout_width="200dp"
		android:layout_height="50dp"
		android:layout_marginTop="80dp"
		android:background="@drawable/button_corner"
		android:fontFamily="@font/segoeuib"
		android:text="@string/transfer_submitButton"
		android:textColor="@color/light_background"
		android:textSize="20sp"
		android:textStyle="bold"
		app:layout_constraintEnd_toEndOf="@+id/messageTransferInput"
		app:layout_constraintStart_toStartOf="@+id/messageTransferInput"
		app:layout_constraintTop_toBottomOf="@+id/messageTransferInput" />

	<TextView
		android:id="@+id/title"
		android:layout_width="320dp"
		android:layout_height="60dp"
		android:fontFamily="@font/segoeui"
		android:gravity="center|start"
		android:text="@string/transfer_title"
		android:textColor="@color/light_background"
		android:textSize="26sp"
		android:textStyle="normal"
		app:layout_constraintBottom_toBottomOf="@+id/appBar"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.7"
		app:layout_constraintStart_toStartOf="@+id/appBar"
		app:layout_constraintTop_toTopOf="@+id/appBar" />

	<EditText
		android:id="@+id/messageTransferInput"
		android:layout_width="350dp"
		android:layout_height="150dp"
		android:ems="10"
		android:fontFamily="@font/segoeui"
		android:gravity="bottom"
		android:hint="@string/transfer_messageTransferInput"
		android:inputType="textMultiLine"
		android:lines="5"
		android:maxLength="180"
		android:scrollbarStyle="insideInset"
		android:scrollbars="vertical"
		android:textColor="@color/light_hint"
		android:textSize="20sp"
		app:layout_constraintEnd_toEndOf="@+id/moneyTransferInput"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintStart_toStartOf="@+id/moneyTransferInput"
		app:layout_constraintTop_toBottomOf="@+id/moneyTransferInput" />

	<View
		android:id="@+id/uselessView"
		android:layout_width="match_parent"
		android:layout_height="130dp"
		android:background="@color/light_form"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/appBar" />

	<ImageView
		android:id="@+id/backButton"
		android:layout_width="30dp"
		android:layout_height="30dp"
		android:background="@drawable/abc_vector_test"
		android:clickable="true"
		app:layout_constraintBottom_toBottomOf="@+id/appBar"
		app:layout_constraintEnd_toEndOf="@+id/appBar"
		app:layout_constraintHorizontal_bias="0.03"
		app:layout_constraintStart_toStartOf="@+id/appBar"
		app:layout_constraintTop_toTopOf="@+id/appBar" />

	<ImageView
		android:id="@+id/profilePicture"
		android:layout_width="83dp"
		android:layout_height="73dp"
		android:layout_marginTop="96dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/appBar"
		tools:srcCompat="@tools:sample/avatars" />

	<TextView
		android:id="@+id/accountUsername"
		android:layout_width="350dp"
		android:layout_height="40dp"
		android:layout_marginTop="16dp"
		android:fontFamily="@font/segoeuib"
		android:gravity="center"
		android:text="@string/transfer_accountUsername"
		android:textColor="@color/light_title"
		android:textSize="22sp"
		android:textStyle="bold"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/profilePicture" />

	<TextView
		android:id="@+id/accountEmail"
		android:layout_width="350dp"
		android:layout_height="30dp"
		android:fontFamily="@font/segoeuil"
		android:gravity="center"
		android:text="@string/transfer_accountEmail"
		android:textColor="@color/light_hint"
		android:textSize="18sp"
		android:textStyle="normal"
		app:layout_constraintEnd_toEndOf="@+id/accountUsername"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintStart_toStartOf="@+id/accountUsername"
		app:layout_constraintTop_toBottomOf="@+id/accountUsername" />

	<EditText
		android:id="@+id/moneyTransferInput"
		android:layout_width="350dp"
		android:layout_height="60dp"
		android:ems="10"
		android:fontFamily="@font/segoeui"
		android:hint="@string/transfer_moneyTransferInput"
		android:inputType="number"
		android:maxLength="9"
		android:textColor="@color/light_hint"
		android:textSize="20sp"
		app:layout_constraintEnd_toEndOf="@+id/notiText"
		app:layout_constraintStart_toStartOf="@+id/notiText"
		app:layout_constraintTop_toBottomOf="@+id/notiText"
		android:autofillHints="" />

	<TextView
		android:id="@+id/notiText"
		android:layout_width="350dp"
		android:layout_height="40dp"
		android:layout_marginTop="20dp"
		android:fontFamily="@font/segoeui"
		android:gravity="center|start"
		android:textColor="@color/light_error"
		android:paddingStart="10dp"
		android:paddingEnd="10dp"
		android:text=""
		android:visibility="invisible"
		app:layout_constraintEnd_toEndOf="@+id/accountEmail"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintStart_toStartOf="@+id/accountEmail"
		app:layout_constraintTop_toBottomOf="@+id/accountEmail" />



</androidx.constraintlayout.widget.ConstraintLayout>