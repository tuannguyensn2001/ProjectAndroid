<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:visibility="visible"
	tools:context=".View.TransferActivity">

	<View
		android:id="@+id/appBar"
		android:layout_width="match_parent"
		android:layout_height="60dp"
		android:background="@color/light_mainColor"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

	</View>

	<TextView
		android:id="@+id/title"
		android:layout_width="320dp"
		android:layout_height="60dp"
		android:fontFamily="@font/segoeui"
		android:gravity="center|start"
		android:text="Chuyển tiền tới tài khoản"
		android:textColor="@color/light_background"
		android:textSize="26sp"
		android:textStyle="normal"
		app:layout_constraintBottom_toBottomOf="@+id/appBar"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.7"
		app:layout_constraintStart_toStartOf="@+id/appBar"
		app:layout_constraintTop_toTopOf="@+id/appBar" />

	<ImageView
		android:id="@+id/backButton"
		android:layout_width="30dp"
		android:layout_height="30dp"
		android:background="@drawable/abc_vector_test"
		android:clickable="true"
		app:layout_constraintBottom_toBottomOf="@+id/appBar"
		app:layout_constraintEnd_toEndOf="@+id/appBar"
		app:layout_constraintHorizontal_bias="0.03"
		app:layout_constraintStart_toStartOf="@+id/appBar"
		app:layout_constraintTop_toTopOf="@+id/appBar" />

	<ImageView
		android:id="@+id/profilePicture"
		android:layout_width="83dp"
		android:layout_height="73dp"
		android:layout_marginTop="64dp"
		android:contentDescription="TODO"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/appBar"
		tools:srcCompat="@tools:sample/avatars" />

	<TextView
		android:id="@+id/accountUsername"
		android:layout_width="350dp"
		android:layout_height="40dp"
		android:layout_marginTop="16dp"
		android:fontFamily="@font/segoeuib"
		android:gravity="center"
		android:text="NGUYEN NGOC CHAU BUI"
		android:textColor="@color/light_title"
		android:textSize="22sp"
		android:textStyle="bold"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/profilePicture" />

	<TextView
		android:id="@+id/account_Email"
		android:layout_width="350dp"
		android:layout_height="30dp"
		android:fontFamily="@font/segoeuil"
		android:gravity="center"
		android:text="ccccccc@gmail.com"
		android:textColor="@color/light_hint"
		android:textSize="18sp"
		android:textStyle="normal"
		app:layout_constraintEnd_toEndOf="@+id/accountUsername"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintStart_toStartOf="@+id/accountUsername"
		app:layout_constraintTop_toBottomOf="@+id/accountUsername" />

	<EditText
		android:id="@+id/moneyTransferInput"
		android:layout_width="350dp"
		android:layout_height="60dp"
		android:layout_marginTop="32dp"
		android:ems="10"
		android:fontFamily="@font/segoeui"
		android:hint="Nhập số tiền "
		android:inputType="number"
		android:textColor="@color/light_hint"
		android:textSize="20sp"
		app:layout_constraintEnd_toEndOf="@+id/account_Email"
		app:layout_constraintStart_toStartOf="@+id/account_Email"
		app:layout_constraintTop_toBottomOf="@+id/account_Email" />

	<EditText
		android:id="@+id/messageTransferInput"
		android:layout_width="350dp"
		android:layout_height="60dp"
		android:layout_marginTop="24dp"
		android:ems="10"
		android:fontFamily="@font/segoeui"
		android:hint="Nhập lời nhắn cho người nhận"
		android:inputType="textPersonName"
		android:textColor="@color/light_hint"
		android:textSize="20sp"
		app:layout_constraintEnd_toEndOf="@+id/moneyTransferInput"
		app:layout_constraintStart_toStartOf="@+id/moneyTransferInput"
		app:layout_constraintTop_toBottomOf="@+id/moneyTransferInput" />

	<Button
		android:id="@+id/submitButton"
		android:layout_width="200dp"
		android:layout_height="50dp"
		android:layout_marginTop="64dp"
		android:background="@drawable/button_corner"
		android:fontFamily="@font/segoeuib"
		android:text="Chuyển tiền"
		android:textColor="@color/light_background"
		android:textSize="20sp"
		android:textStyle="bold"
		app:layout_constraintEnd_toEndOf="@+id/messageTransferInput"
		app:layout_constraintHorizontal_bias="0.507"
		app:layout_constraintStart_toStartOf="@+id/messageTransferInput"
		app:layout_constraintTop_toBottomOf="@+id/messageTransferInput" />

</androidx.constraintlayout.widget.ConstraintLayout>