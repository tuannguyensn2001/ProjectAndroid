<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/message_container"
	android:layout_width="240dp"
	android:layout_height="wrap_content"
	android:background="@drawable/message_transaction"
	android:orientation="vertical"
	android:padding="8dp">

	<TextView
		android:id="@+id/message"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingHorizontal="16dp"
		android:paddingVertical="8dp"
		android:textColor="@color/light_title"
		android:textSize="18sp" />

	<LinearLayout
		android:id="@+id/transaction_part"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:paddingVertical="8dp"
		android:visibility="visible">

		<View
			android:layout_width="match_parent"
			android:layout_height="2dp"
			android:layout_marginBottom="8dp"
			android:background="@color/light_mainColorLighter" />

		<TextView
			android:id="@+id/transaction_title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:fontFamily="sans-serif-black"
			android:paddingHorizontal="16dp"
			android:textColor="@color/light_mainColor"
			android:textSize="18sp" />

		<TextView
			android:id="@+id/transaction_money_first"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:maxLines="1"
			android:paddingHorizontal="16dp"
			android:textColor="@color/light_hint"
			android:textSize="24sp"
			android:textStyle="bold" />
	</LinearLayout>


	<LinearLayout
		android:id="@+id/status_part"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:paddingVertical="8dp"
		android:visibility="visible">

		<View
			android:layout_width="match_parent"
			android:layout_height="2dp"
			android:layout_marginHorizontal="16dp"
			android:layout_marginBottom="8dp"
			android:background="@color/light_mainColorLighter" />

		<TextView
			android:id="@+id/transaction_status"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:fontFamily="sans-serif-black"
			android:paddingHorizontal="16dp"
			android:textColor="@color/green"
			android:textSize="18sp" />

		<TextView
			android:id="@+id/transaction_money_second"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:fontFamily="sans-serif-black"
			android:paddingHorizontal="16dp"
			android:textColor="@color/green"
			android:textSize="24sp" />


	</LinearLayout>

	<LinearLayout
		android:id="@+id/action_part"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:visibility="visible">

		<TextView
			android:id="@+id/positive_button"
			style="@style/visual_tab_background"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginVertical="12dp"
			android:layout_marginStart="16dp"
			android:layout_marginEnd="8dp"
			android:layout_weight="1"
			android:backgroundTint="@color/green"
			android:backgroundTintMode="src_atop"
			android:clickable="true"
			android:text="YES" />

		<TextView
			android:id="@+id/negative_button"
			style="@style/visual_tab_background"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginVertical="12dp"
			android:layout_marginStart="8dp"
			android:layout_marginEnd="16dp"
			android:layout_weight="1"
			android:backgroundTint="@color/red"
			android:backgroundTintMode="src_atop"
			android:clickable="true"
			android:text="NO" />
	</LinearLayout>
</LinearLayout>