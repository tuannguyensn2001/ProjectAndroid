<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:android="http://schemas.android.com/apk/res/android"
	tools:showIn="@layout/activity_sign_up">


	<TextView
		android:id="@+id/title"
		style="@style/Title"
		android:layout_marginTop="120dp"
		android:text="@string/signup_title"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/notiText"
		style="@style/ErrorText"
		android:text="@string/signup_errorText"
		android:visibility="invisible"
		app:layout_constraintEnd_toEndOf="@+id/title"
		app:layout_constraintStart_toStartOf="@+id/title"
		app:layout_constraintTop_toBottomOf="@+id/title" />

	<EditText
		android:id="@+id/usernameInput"
		style="@style/Field"
		android:autofillHints=""
		android:hint="@string/signup_usernameInput"
		android:inputType="textPersonName"
		app:layout_constraintEnd_toEndOf="@+id/notiText"
		app:layout_constraintStart_toStartOf="@+id/notiText"
		app:layout_constraintTop_toBottomOf="@+id/notiText" />

	<EditText
		android:id="@+id/passwordInput"
		style="@style/Field"
		android:autofillHints=""
		android:hint="@string/signup_passwordInput"
		android:inputType="textPassword"
		app:layout_constraintEnd_toEndOf="@+id/emailInput"
		app:layout_constraintStart_toStartOf="@+id/emailInput"
		app:layout_constraintTop_toBottomOf="@+id/emailInput" />

	<EditText
		android:id="@+id/passwordCheckInput"
		style="@style/Field"
		android:autofillHints=""
		android:hint="@string/signup_passwordCheckInput"
		android:inputType="textPassword"
		app:layout_constraintEnd_toEndOf="@+id/passwordInput"
		app:layout_constraintStart_toStartOf="@+id/passwordInput"
		app:layout_constraintTop_toBottomOf="@+id/passwordInput" />

	<EditText
		android:id="@+id/emailInput"
		style="@style/Field"
		android:autofillHints=""
		android:hint="@string/signup_emailInput"
		android:inputType="textEmailAddress"
		app:layout_constraintEnd_toEndOf="@+id/usernameInput"
		app:layout_constraintStart_toStartOf="@+id/usernameInput"
		app:layout_constraintTop_toBottomOf="@+id/usernameInput" />

	<Button
		android:id="@+id/submitButton"
		style="@style/SubmitButton"
		android:layout_width="320dp"
		android:layout_marginTop="38dp"
		android:text="@string/signup_submitButton"
		app:layout_constraintEnd_toEndOf="@+id/passwordCheckInput"
		app:layout_constraintStart_toStartOf="@+id/passwordCheckInput"
		app:layout_constraintTop_toBottomOf="@+id/passwordCheckInput" />


</merge>